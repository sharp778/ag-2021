      x-transition:enter-start="opacity-0 transform scale-90" x-transition:enter-end="opacity-100 transform scale-100">
      <div
        class="image-wrapper shadow-agBlue rounded overflow-hidden  border-ag-primary-blue-500 lg:h-full flex items-center">
        <img src="/assets/images/solutions/hubs/oncohub.png" class=" object-cover w-full" alt=""/>
      </div>
    </div>

    <div class="" x-show="active === 2" x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 transform scale-90" x-transition:enter-end="opacity-100 transform scale-100">
