<div class="py-16">
  <div class="container px-16 mx-auto">
    <div class="mb-8 ml-4">
      <h1 class="text-4xl text-blue-700 font-medium mb-8 w-full">Our Solutions</h1>
      <p class="text-gray-800 text-lg leading-relaxed">
        Discover solutions all across the value chain. Lorem ipsum, dolor sit
        amet consectetur adipisicing elit. Et, ut.
      </p>
    </div>

    <div class="font-lexend border-red-500">
      <section class="text-gray-700">
        <div class="container flex ">

          {% for item in homepagesolutions %}
          <div class="w-full   p-4 mx-auto lg:w-1/3">
            <div class="shadow-xl solution-card  rounded-xl bg-gray-50">
              <img
                class="
                  object-cover object-center
                  w-full
                  lg:h-48
                  md:h-36
                  rounded-t-xl
                "
                src= {{ item.image }}
                alt="blog"
              />
              <div class="p-4 lg:p-8 bg-gray-50">
                
                <h1
                  class="
                    mx-auto
                    mb-6
                    text-2xl
                    
                    leading-none
                    
                    text-gray-800
                    lg:text-3xl
                    title-font
                  "
                >
                  {{ item.title }}
                </h1>
                <p>
                 {{ item.description }}
                 </p>
              </div>
              <div class="px-6 py-4   learn-more rounded-b-xl">
                <a
                  href={{ item.link }}
                  class="
                    inline-flex
                    items-center
                    mt-auto
                    ml-2
                    font-semibold
                    text-blue-600
                    lg:mb-0
                    hover:text-black
                  "
                  title="Read Full Article"
                >
                  Learn More Â»
                </a>
              </div>
            </div>
          </div>

          {% endfor %}
        </div>
      </section>
    </div>
  </div>
</div>
