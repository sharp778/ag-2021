<div class="py-16">
  <div class="md:container md:px-16 px-6 mx-auto">
    <div class="mb-8 ml-4">
      <h1 class="md:text-4xl text-3xl text-blue-700 font-medium mb-8 w-full">Our Solutions</h1>
      <p class="text-gray-600 md:text-xl text-base leading-relaxed">
        Discover our solutions across the biopharma value chain. 
      </p>
    </div>

    <div class="border-red-500">
      <section class="text-gray-700">
        <div class="md:container md:flex ">

          {% for item in homepagesolutions %}
          <div class="p-4 mx-auto md:w-1/3">
            <a href={{ item.link }}>
            <div class="shadow-lg group hover:shadow-2xl solution-card transition duration-300  rounded-xl bg-gray-50">
              <img
                class="
                  object-cover object-center
                  w-full
                  lg:h-48
                  md:h-36
                  rounded-t-xl
                "
                src= {{ item.image }}
                alt="blog"
              />
              <div class="p-4 lg:p-8 bg-gray-50">
                
                <h1
                  class="
                    mx-auto
                    md:mb-6
                    mb-4
                    mt-4
                    md:mt-0
                    text-2xl
                    group-hover:text-blue-700
                    leading-none
                    font-medium
                    px-2
                    md:px-0
                    duration-300
                    transition
                    text-gray-800
                    lg:text-3xl
                    title-font
                  "
                >
                  {{ item.title }}
                </h1>
                <p class="text-sm md:text-base md:px-0 px-2 text-gray-600">
                 {{ item.description }}
                 </p>
              </div>
              
                <a
                  href={{ item.link }}
                  class="
                    inline-flex
                    learn-more
                    px-6
                    py-4
                    items-center
                    mt-auto
                    md:ml-2
                    font-semibold
                    text-blue-600
                    lg:mb-0
                    hover:text-black
                  "
                  title="Read Full Article"
                >
                  Learn More Â»
                </a>
              
            </div>
            </a>
          </div>

          {% endfor %}
        </div>
      </section>
    </div>
  </div>
</div>
