{% import "macros/accordion.njk" as accordion %}

<section class="text-gray-700  ">
    <div class="md:container  flex flex-col md:px-5 pt-12 md:mt-12 mx-auto lg:items-center">
        <div class="flex flex-col w-full  mb-6 md:mb-12 text-left lg:text-center">
            <h1 class="md:mb-12 mb-8 text-2xl  px-6 sm:text-5xl font-medium leading-snug md:leading-normal md:w-2/3 mx-auto  text-blue-800  ">Transforming biopharma R&D using computational sciences and AI</h1>
          
            <p class="mx-auto mb-8 text-sm px-6 md:text-xl leading-relaxed text-gray-600 lg:w-2/3">Our solutions enable biopharma R&D and IT to efficiently tackle the complexity, scale, and richness of modern R&D and clinical domains. They are built on the following enablers that deliver valuable outcomes and significantly enhance the pace of innovation.</p>
        </div>
    </div>
</section>

<section class="text-gray-700 ">
    <div class="md:container items-center px-5 md:py-8  mx-auto lg:px-16">
        <div class="flex flex-wrap mb-12 text-left">

            {% for item in contextPoints %}

                <div class="w-full group mx-auto  lg:w-1/3 px-4 mb-8">
                    <div class="p-6 shadow-lg sm:shadow-md sm:group-hover:shadow-xl rounded-lg  transform transition duration-300 colorful-card border-yellow-300">
                        <div class="  items-center justify-center sm:w-16 w-12  mx-auto mb-2 text-black  rounded-full">
                            <img src= {{  item.icon }}   alt="">
                            {{item.link }}
                        </div>
                        <h1 class="mx-auto  text-lg md:text-2xl group-hover:text-blue-900 transition duration-300 font-medium leading-none text-center text-gray-600 lg:text-2xl ">
                            {{ item.title }}
                        </h1>
                        <p class="mx-auto text-sm md:text-base text-center  leading-relaxed text-gray-500 ">
                            {{ item.description }}
                        </p>

                    </div>
                </div>

            {% endfor %}

            
        </div>
    </div>
</section>

