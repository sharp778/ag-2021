{% import "macros/accordion.njk" as accordion %}

<section class="text-gray-700 font-lexend ">
    <div class="container  flex flex-col px-5 pt-12 mt-12 mx-auto lg:items-center">
        <div class="flex flex-col w-full mb-12 text-left lg:text-center">
            <h1 class="mb-8 sm:text-5xl font-medium sm:leading-snug w-2/3 mx-auto  text-blue-800  ">Enabling computational transformation of the biopharma industry</h1>
          
            <p class="mx-auto text-xl font-medium leading-relaxed text-gray-600 lg:w-2/3">Our solutions enable Biopharma and IT to efficiently tackle the complexity, scale and richness of modern R&D domains and platforms.</p>
        </div>
    </div>
</section>

<section class="text-gray-700 ">
    <div class="container items-center px-5 py-8  mx-auto lg:px-16">
        <div class="flex flex-wrap mb-12 text-left">

            {% for item in contextPoints %}

                <div class="w-full group mx-auto  lg:w-1/3 px-4 mb-8">
                    <div class="p-6 shadow-md group-hover:-translate-y-1 rounded-lg  transform transition duration-500 colorful-card border-yellow-300">
                        <div class="  items-center justify-center w-16  mx-auto mb-2 text-black bg-blueGray-100 rounded-full">
                            <img src= {{  item.icon }}   alt="">
                            {{item.link }}
                        </div>
                        <h1 class="mx-auto text-2xl group-hover:text-blue-900 transition duration-300 font-medium leading-none text-center text-gray-600 lg:text-2xl ">
                            {{ item.title }}
                        </h1>
                        <p class="mx-auto text-base text-center  leading-relaxed text-gray-500 ">
                            {{ item.description }}
                        </p>

                    </div>
                </div>

            {% endfor %}

            
        </div>
    </div>
</section>

