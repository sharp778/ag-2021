{% for person in leadership %}

<section class={{ person.background }}>
  <div class="max-w-screen-xl  text-gray-700 ag-container-padding mx-auto leader-section">

    <div class="mx-auto flex py-24 md:flex-row flex-col items-center">
      <div class="md:w-1/2 w-full flex items-center justify-center mb-10 md:mb-0">
        <img class="
              object-cover object-center
              leader-image
              rounded-full
              h-64
              w-64
              sm:h-80 sm:w-80
              md:w-96 md:h-96
            " alt="hero" src={{ person.photo }} />
      </div>

      <div class="
            lg:flex-grow
            group
            md:w-1/2 md:px-6
            lg:px-8
            flex flex-col
            md:items-start md:text-left
            items-center
            text-center
          ">
        <h1 class="
              title-font
              relative
              items-baseline
              justify
            
              text-2xl
              sm:text-3xl
              md:text-4xl
              mb-8
              font-semibold
              text-ag-secondary-red-500
            ">
          {{ person.name }}
          <span class="
                bottom-0
                ml-2
                sm:ml-4
                absolute
                text-3xl
                sm:text-4xl
                cursor-pointer
                text-ag-primary-blue-500
                md:justify-start
                justify-center
                items-baseline
              ">
            <i class="bx bxl-linkedin-square"></i>
          </span>
        </h1>

        {% for para in person.description %}
        <p class="
              mb-4
              text-base
              text-justify
              sm:text-left
              sm:leading-snug
              lg:leading-relaxed
              text-gray-600
              sm:text-lg
            ">
          {{ para }}
        </p>

        {% endfor %}
      </div>
    </div>

  </div>
</section>

{% endfor %}